<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_stadium"
        android:layout_width="match_parent"
        android:layout_height="@dimen/stadium_height"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/stadium_olimpiyskii"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="@drawable/ic_logo_background"
        app:layout_constraintBottom_toBottomOf="@+id/iv_stadium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_team_logo"
        android:layout_width="72dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_stadium"
        app:layout_constraintStart_toStartOf="@+id/view"
        tools:src="@drawable/dynamo_logo" />

    <TextView
        android:id="@+id/tv_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintStart_toEndOf="@id/iv_team_logo"
        app:layout_constraintTop_toTopOf="@id/iv_team_logo"
        tools:text="Динамо Киев" />

    <TextView
        android:id="@+id/tv_stadium_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_team_name"
        app:layout_constraintStart_toEndOf="@id/iv_team_logo"
        app:layout_constraintBottom_toBottomOf="@id/view"
        tools:text="Олимпийский"/>

    <View
        android:id="@+id/background_notification"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/ic_circle"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/background_star"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/ic_circle"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toStartOf="@id/background_notification" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/background_star"
        app:layout_constraintEnd_toEndOf="@+id/background_star"
        app:layout_constraintStart_toStartOf="@+id/background_star"
        app:layout_constraintTop_toTopOf="@+id/background_star"
        app:srcCompat="@android:drawable/star_off" />


</androidx.constraintlayout.widget.ConstraintLayout>