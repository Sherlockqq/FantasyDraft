<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

    </data>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_background"
        android:layout_width="@dimen/backgroundView_width"
        android:layout_height="@dimen/backgroundView_height"
        android:background="@drawable/ic_stat_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/view_tv_background"
        android:layout_width="@dimen/backgroundTV_width"
        android:layout_height="@dimen/backgroundTV_height"
        android:layout_marginBottom="@dimen/mb_vw_tv_background"
        android:background="@drawable/ic_tv_background"
        app:layout_constraintBottom_toBottomOf="@+id/view_background"
        app:layout_constraintEnd_toEndOf="@+id/view_background"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tv_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/view_tv_background"
        app:layout_constraintEnd_toEndOf="@+id/view_tv_background"
        app:layout_constraintStart_toStartOf="@+id/view_tv_background"
        app:layout_constraintTop_toTopOf="@+id/view_tv_background"
        tools:text="12 Goals"/>

    <ImageView
        android:id="@+id/iv_Result"
        android:layout_width="@dimen/iv_photo_width"
        android:layout_height="@dimen/iv_photo_height"
        app:layout_constraintBottom_toTopOf="@+id/view_tv_background"
        app:layout_constraintEnd_toEndOf="@+id/view_background"
        app:layout_constraintStart_toStartOf="@+id/view_background"
        app:layout_constraintTop_toTopOf="@+id/view_background" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>