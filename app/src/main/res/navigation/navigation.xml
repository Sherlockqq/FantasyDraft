<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/fixturesFragment">

    <fragment
        android:id="@+id/fixturesFragment"
        android:name="com.midina.matches_ui.FixturesFragment"
        android:label="@string/fixtures_label"/>
    <fragment
        android:id="@+id/draftFragment"
        android:name="com.example.fantasydraft.draft.DraftFragment"
        android:label="fragment_draft"
        tools:layout="@layout/fragment_draft" >
        <action
            android:id="@+id/toRegister"
            app:destination="@id/registrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.fantasydraft.registration.RegistrationFragment"
        android:label="RegistrationFragment"
        tools:layout="@layout/registration_fragment"/>

</navigation>